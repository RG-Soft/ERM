Процедура ЗаполнитьПравилаКонвертацииПредопределенныхДанных(НаправлениеОбмена, ПравилаКонвертации) Экспорт
	Если НаправлениеОбмена = "Отправка" Тогда
		// Перечисление_Sources_Отправка.
		ПравилоКонвертации = ПравилаКонвертации.Добавить();
		ПравилоКонвертации.ИмяПКПД = "Перечисление_Sources_Отправка";
		ПравилоКонвертации.ТипДанных = Метаданные.Перечисления.ТипыСоответствий;
		ПравилоКонвертации.ТипXDTO = "Source";
	
		ЗначенияДляОтправки = Новый Соответствие;
		ЗначенияДляОтправки.Вставить(Перечисления.ТипыСоответствий.HOBs, "HOBs");
		ЗначенияДляОтправки.Вставить(Перечисления.ТипыСоответствий.Lawson, "Lawson");
		ЗначенияДляОтправки.Вставить(Перечисления.ТипыСоответствий.OracleMI, "OracleMI");
		ЗначенияДляОтправки.Вставить(Перечисления.ТипыСоответствий.OracleSmith, "OracleSmith");
		ЗначенияДляОтправки.Вставить(Перечисления.ТипыСоответствий.Radius, "Radius");
		ЗначенияДляОтправки.Вставить(Перечисления.ТипыСоответствий.Geofit, "Geofit");
		ЗначенияДляОтправки.Вставить(Перечисления.ТипыСоответствий.MFG, "MFG");
		ПравилоКонвертации.КонвертацииЗначенийПриОтправке = ЗначенияДляОтправки;
	
		// Перечисление_СостоянияАктивностиКонтрагентов.
		ПравилоКонвертации = ПравилаКонвертации.Добавить();
		ПравилоКонвертации.ИмяПКПД = "Перечисление_СостоянияАктивностиКонтрагентов";
		ПравилоКонвертации.ТипДанных = Метаданные.Перечисления.СостоянияАктивностиКонтрагентов;
		ПравилоКонвертации.ТипXDTO = "СостоянияАктивностиКонтрагентов";
	
		ЗначенияДляОтправки = Новый Соответствие;
		ЗначенияДляОтправки.Вставить(Перечисления.СостоянияАктивностиКонтрагентов.Активен, "Активен");
		ЗначенияДляОтправки.Вставить(Перечисления.СостоянияАктивностиКонтрагентов.Неактивен, "Неактивен");
		ЗначенияДляОтправки.Вставить(Перечисления.СостоянияАктивностиКонтрагентов.ОжидаетАктивации, "ОжидаетАктивации");
		ПравилоКонвертации.КонвертацииЗначенийПриОтправке = ЗначенияДляОтправки;
	КонецЕсли;
