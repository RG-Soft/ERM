		<query>ВЫБРАТЬ
	PaymentsОбороты.Company,
	PaymentsОбороты.Client,
	PaymentsОбороты.Source,
	PaymentsОбороты.Location,
	PaymentsОбороты.SubSubSegment,
	ВЫБОР
		КОГДА PaymentsОбороты.Invoice &lt;&gt; ЗНАЧЕНИЕ(Документ.Invoice.ПустаяСсылка)
			ТОГДА PaymentsОбороты.Invoice
		ИНАЧЕ PaymentsОбороты.CashBatch
	КОНЕЦ КАК Invoice,
	PaymentsОбороты.Currency,
	PaymentsОбороты.AmountОборот,
	PaymentsОбороты.CashBatch.Дата
ПОМЕСТИТЬ Исходные
ИЗ
	РегистрНакопления.Payments.Обороты(, , , ) КАК PaymentsОбороты
ГДЕ
	(PaymentsОбороты.Invoice ССЫЛКА Документ.Invoice
			ИЛИ PaymentsОбороты.Invoice ССЫЛКА Документ.CashBatch)
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Исходные.Client,
	Исходные.Company,
	Исходные.Source,
	Исходные.Location,
	Исходные.SubSubSegment,
	Исходные.Currency,
	СУММА(Исходные.AmountОборот) КАК AmountОборот,
	ВнутренниеКурсыВалютСрезПоследних.Курс,
	ВнутренниеКурсыВалютСрезПоследних.Кратность,
	СУММА(ВЫБОР
			КОГДА Исходные.Currency = &amp;USD
				ТОГДА Исходные.AmountОборот
			КОГДА ВнутренниеКурсыВалютСрезПоследних.Курс ЕСТЬ NULL 
					ИЛИ ВнутренниеКурсыВалютСрезПоследних.Курс = 0
				ТОГДА 0
			ИНАЧЕ Исходные.AmountОборот / ВнутренниеКурсыВалютСрезПоследних.Курс
		КОНЕЦ) КАК BaseAmount,
	Исходные.CashBatchДата,
	ВЫБОР
		КОГДА Исходные.Invoice ССЫЛКА Документ.Invoice
			ТОГДА Исходные.Invoice.DocNumber
		ИНАЧЕ Исходные.Invoice.PaymentNumber
	КОНЕЦ КАК InvoiceNum,
	ТИПЗНАЧЕНИЯ(Исходные.Invoice) КАК Type,
	Исходные.Invoice
ИЗ
	Исходные КАК Исходные
		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.ВнутренниеКурсыВалют.СрезПоследних({(&amp;КонецПериода)}, ) КАК ВнутренниеКурсыВалютСрезПоследних
		ПО Исходные.Currency = ВнутренниеКурсыВалютСрезПоследних.Валюта

СГРУППИРОВАТЬ ПО
	Исходные.Client,
	Исходные.Company,
	Исходные.Source,
	Исходные.SubSubSegment,
	Исходные.Location,
	Исходные.Currency,
	ВнутренниеКурсыВалютСрезПоследних.Курс,
	ВнутренниеКурсыВалютСрезПоследних.Кратность,
	Исходные.CashBatchДата,
	ВЫБОР
		КОГДА Исходные.Invoice ССЫЛКА Документ.Invoice
			ТОГДА Исходные.Invoice.DocNumber
		ИНАЧЕ Исходные.Invoice.PaymentNumber
	КОНЕЦ,
	ТИПЗНАЧЕНИЯ(Исходные.Invoice),
	Исходные.Invoice

ИМЕЮЩИЕ
	СУММА(Исходные.AmountОборот) &lt;&gt; 0</query>
