Функция ПолучитьЧисло(ЧислоСтрокой, ИмяКолонки = "", IDКонтракта = "")
	
	ТекЧисло = 0;
	ТекЗначение = СокрЛП(СтрЗаменить(ЧислоСтрокой, ",", ""));
	Если ЗначениеЗаполнено(ТекЗначение) Тогда
		Попытка
			Если Лев(ТекЗначение, 1) = "(" И Прав(ТекЗначение, 1) = ")" Тогда
				ТекЧисло = - Число(Сред(ТекЗначение, 2, СтрДлина(ТекЗначение) - 2));
		    Иначе
				ТекЧисло = Число(ТекЗначение);
			КонецЕсли;
		Исключение
			Сообщение = Новый СообщениеПользователю;
			Сообщение.Текст = "Не удалось преобразовать к числу значение " + ЧислоСтрокой + ". " + ИмяКолонки + " - " + IDКонтракта;
			Сообщение.Сообщить();
		КонецПопытки;
	КонецЕсли;
	
	Возврат ТекЧисло;
	
